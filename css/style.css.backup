    pointer-events: none;
    padding-right: 2rem;
}

.philosophy-text-overlay.visible {
    opacity: 1 !important;
    transform: translateX(0) translateY(-50%) !important;
    animation: slideInFromRight 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

.philosophy-text-overlay .text-line-1 {
    font-family: 'Pretendard', ui-sans-serif, system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.0;
    letter-spacing: -0.03em;
    color: rgb(17, 17, 17);
    margin: 0;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 0;
    padding: 0.1rem 0.2rem;
    backdrop-filter: blur(20px);
    display: inline-block;
    white-space: nowrap;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    width: fit-content;
}

.philosophy-text-overlay .text-line-2,
.philosophy-text-overlay .text-line-3 {
    font-family: 'Pretendard', ui-sans-serif, system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.0;
    letter-spacing: -0.03em;
    color: rgb(255, 255, 255);
    margin: 0;
    white-space: nowrap;
}

.philosophy-text-overlay .text-line-3 {
    margin-top: -0.3rem;
}



.philosophy-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 1;
    opacity: 1;
    pointer-events: none;
    transition: opacity 0.3s ease;
}

.background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.background-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(var(--image-scale, 0.9));
    transition: transform 0.3s ease;
}

.background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
}

