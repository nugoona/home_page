/* Philosophy Section */
.philosophy-section {
    position: relative;
    height: 100vh;
    overflow: hidden;
    margin-top: 4rem;
    background: rgb(234, 234, 234);
}

/* 스크롤 제한 제거 - 자연스러운 스크롤 허용 */

/* 블러 효과와 텍스트 스타일 */
.philosophy-section .background-image img {
    filter: blur(var(--blur-amount, 0.5px));
    transition: filter 0.5s ease;
}

@keyframes slideInFromRight {
    from {
        opacity: 0;
        transform: translateX(300px) translateY(-50%);
    }
    to {
        opacity: 1;
        transform: translateX(0) translateY(-50%);
    }
}

@keyframes slideOutToRight {
    from {
        opacity: 1;
        transform: translateX(0) translateY(-50%);
    }
    to {
        opacity: 0;
        transform: translateX(300px) translateY(-50%);
    }
}

.philosophy-text-overlay {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.8rem;
    opacity: 0;
    transform: translateX(300px) translateY(-50%);
    position: absolute;
    top: 50%;
    right: 8rem;
    z-index: 20;
