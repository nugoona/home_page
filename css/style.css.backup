/* 텍스트 애니메이션 */
@keyframes revealText {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.text-reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
}

.text-reveal.visible {
    opacity: 1;
    transform: translateY(0);
}

