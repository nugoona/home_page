/* Base styles */
body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    overflow-x: hidden;
    background: rgb(234, 234, 234);
    font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, Roboto, sans-serif;
    -webkit-font-smoothing: antialiased;
    scroll-behavior: smooth;
}

:root {
    --header-height: 70px;
    --header-bg: rgb(234, 234, 234);
    --header-border: rgba(34, 34, 34, 0.05);
    --text-color: rgb(17, 17, 17);
}

/* Navigation */
.site-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height);
    background: var(--header-bg);
    border-bottom: 1px solid var(--header-border);
    z-index: 1000;
}

.nav-inner {
    max-width: 1920px;
    margin: 0 auto;
    padding: 0 40px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* 웹에서는 모바일 전용 요소들 숨기기 */
.hamburger-menu,
.mobile-overlay {
    display: none;
}

.nav-brand a {
    font-family: 'Pretendard', sans-serif;
    font-size: 24px;
    font-weight: 700;
    text-decoration: none;
    color: var(--text-color);
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
}

.nav-brand a {
    display: flex;
    align-items: center;
    gap: 10px;
}

.nav-brand a img {
    display: block;
    height: 75px;
    width: auto;
    max-width: 400px;
    object-fit: contain;
    background: rgb(234, 234, 234);
    border-radius: 4px;
}

.brand-text {
    font-family: 'Inter Tight', sans-serif;
    font-size: 32px;
    font-weight: 900;
    color: #000000;
    letter-spacing: 0.02em;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    font-feature-settings: "liga" 1, "kern" 1;
}





/* 웹용 브랜드 텍스트 라이트닝 효과 */
@media (min-width: 769px) {
    .nav-brand a .brand-text::before {
        content: '' !important;
        position: absolute !important;
        top: 0 !important;
        left: -100% !important;
        width: 60% !important;
        height: 100% !important;
        background: rgba(255, 255, 255, 1) !important;
        animation: shine 6s linear infinite !important;
        z-index: 1 !important;
        pointer-events: none !important;
    }
}

@keyframes shine {
    0% {
        left: -100%;
    }
    100% {
        left: 100%;
    }
}

.nav-links {
    display: flex;
    gap: 40px;
    margin-left: auto;
    margin-right: 0;
    padding: 0;
    position: relative;
    background: none;
    width: auto;
    height: auto;
    flex-direction: row;
    transform: none;
    opacity: 1;
}

/* 웹용 네비게이션 간격 조정 */
@media (min-width: 769px) {
    .nav-links {
        gap: 60px !important;
    }
}

/* 기본 네비게이션 스타일 (모바일용) */
.nav-links a {
    font-family: 'Pretendard', sans-serif;
    color: var(--text-color);
    text-decoration: none;
    font-size: 20px;
    font-weight: 500;
    letter-spacing: -0.01em;
    opacity: 0.65;
    transition: opacity 0.2s ease;
    padding: 10px 0;
}

/* 웹용 네비게이션 스타일 */
@media (min-width: 769px) {
    .nav-links a {
        font-family: 'Pretendard', sans-serif;
        color: #000000 !important;
        text-decoration: none;
        font-size: 20px !important;
        font-weight: 500;
        letter-spacing: -0.01em;
        opacity: 1 !important;
        transition: opacity 0.2s ease;
        padding: 10px 0;
    }
}

/* 기본 호버 및 액티브 스타일 (모바일용) */
.nav-links a:hover {
    opacity: 1;
}

.nav-links a.active {
    opacity: 1;
    font-weight: 600;
}

/* 웹용 호버 및 액티브 스타일 */
@media (min-width: 769px) {
    .nav-links a {
        position: relative !important;
    }
    
    /* 밑줄 효과 */
    .nav-links a::after {
        content: '' !important;
        position: absolute !important;
        width: 0 !important;
        height: 2px !important;
        bottom: 5px !important;
        left: 50% !important;
        background-color: #000000 !important;
        transition: all 0.3s ease !important;
        transform: translateX(-50%) !important;
        z-index: 1 !important;
    }
    
    .nav-links a:hover::after {
        width: 100% !important;
    }
    
    .nav-links a:hover {
        opacity: 0.8 !important;
    }

    .nav-links a.active {
        opacity: 1 !important;
        font-weight: 600;
    }
    
    .nav-links a.active::after {
        width: 100% !important;
    }
}

/* Hero Section */
.hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    margin-top: 0;
}

.hero-content {
    position: relative;
    z-index: 3;
    text-align: left;
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.hero-video-container {
    position: relative;
    width: 100%;
    height: calc(100vh - var(--header-height));
    overflow: hidden;
}

.video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2;
}

.centered-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 3;
    width: 100%;
    padding: 0 20px;
}

.main-heading {
    font-family: 'Inter Tight', sans-serif;
    font-size: 4.5rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1rem;
    line-height: 1.2;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.sub-heading {
    font-family: 'Pretendard', sans-serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    line-height: 1.4;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.content-section {
    width: 100%;
    min-height: 100vh;
    background-color: rgb(234, 234, 234);
    display: flex;
    align-items: center;
    padding: 0;
    position: relative;
    overflow: hidden;
}

/* 기존 ::before 제거하고 라이트 효과만 사용 */

.text-gif-container {
    width: 100%;
    max-width: 1920px;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    min-height: 450px;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    gap: 2rem;
}

.text-content {
    width: 60% !important; /* 50%에서 60%로 확장 */
    max-width: 1000px !important;
    padding-left: 25rem !important; /* 20rem에서 25rem으로 증가 */
    padding: 1rem 0 !important;
    position: relative !important;
    transition: all 0.3s ease !important;
    display: flex !important;
    flex-direction: column !important;
    justify-content: center !important;
    align-items: flex-start !important;
    text-align: left !important;
}

@media (max-width: 768px) {
    .text-content {
        width: 100% !important;
        max-width: none !important;
        padding-left: 1rem !important;
        padding-right: 1rem !important;
        margin: 0 !important;
    }
}



/* 전체 섹션 구분선으로 변경 */
.content-section::after {
    content: '';
    position: absolute;
    bottom: 2rem;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, rgba(17, 17, 17, 0.1) 20%, rgba(17, 17, 17, 0.3) 50%, rgba(17, 17, 17, 0.1) 80%, transparent 100%);
    border-radius: 1px;
    overflow: hidden;
}

/* 움직이는 라이트 효과 - 부드럽고 천천히 */
.content-section::before {
    content: '';
    position: absolute;
    bottom: 2rem;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.9) 50%, transparent 100%);
    animation: lightMove 6s linear infinite;
    z-index: 1;
}

@keyframes lightMove {
    0% {
        left: -100%;
    }
    100% {
        left: 100%;
    }
}

